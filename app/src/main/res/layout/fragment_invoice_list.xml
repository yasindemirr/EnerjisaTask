<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.InvoiceListFragment">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/constraint"
            android:layout_marginTop="@dimen/dimen30"
            android:layout_marginStart="@dimen/dimen32"
            android:layout_marginEnd="@dimen/dimen16"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen16"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/dimen10"
                android:id="@+id/cardview"
                app:cardUseCompatPadding="false"
                app:cardElevation="@dimen/dimen20"
               >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/dimen15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/info"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/info">
                    </ImageView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/fatura_bilgisi"
                        android:id="@+id/sozlesme_detail"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/dimen15"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/info"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/toplam_borc"
                        android:textSize="@dimen/dimen16sp"
                        android:layout_marginTop="@dimen/dimen16"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/sozlesme_detail"
                        app:layout_constraintTop_toBottomOf="@id/sozlesme_detail">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_medium"
                        android:text="-"
                        android:id="@+id/totalPriceAccount"
                        android:textSize="@dimen/dimen16sp"
                        android:layout_marginTop="@dimen/dimen16"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/sozlesme_detail"
                        app:layout_constraintTop_toBottomOf="@id/sozlesme_detail">

                    </TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/invoiceRec"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/dimen30"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardview"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/invoice_item"
                android:layout_marginTop="@dimen/dimen30">
            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>