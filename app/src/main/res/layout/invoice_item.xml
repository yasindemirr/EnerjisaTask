<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="invoice"
            type="com.demir.yasin.model.ListModel" />
    </data>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dimen16"
            android:layout_marginBottom="@dimen/dimen32"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen10"
            app:cardElevation="@dimen/dimen20">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{invoice.company}"
                    android:id="@+id/information_1"
                    android:textSize="@dimen/dimen16sp"
                    android:fontFamily="@font/hind_medium"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/divider_1"
                    app:layout_constraintTop_toBottomOf="@id/information_1"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@color/divider_color">
                </View>

                <TextView
                    android:id="@+id/information_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:fontFamily="@font/hind_medium"
                    android:text="Adres:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_1">

                </TextView>

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:fontFamily="@font/hind"
                    android:text="@{invoice.address}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/information_2">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/divider_2"
                    app:layout_constraintTop_toBottomOf="@id/adress"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@color/divider_color">
                </View>
                <TextView
                    android:id="@+id/information_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:fontFamily="@font/hind_medium"
                    android:text="Tesisat Numarası:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_2">

                </TextView>
                <TextView
                    android:id="@+id/installation_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:fontFamily="@font/hind"
                    android:text="@{invoice.installationNumber}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen18sp"
                    app:layout_constraintBottom_toBottomOf="@id/information_3"
                    android:drawableEnd="@drawable/copy"
                    android:drawablePadding="@dimen/dimen5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/information_3">
                </TextView>
                <TextView
                    android:id="@+id/information_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:fontFamily="@font/hind_medium"
                    android:text="@string/sözlesme_hesap_no"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/information_3">

                </TextView>
                <TextView
                    android:id="@+id/agreementAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:fontFamily="@font/hind"
                    android:text="@{invoice.contractAccountNumber}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen18sp"
                    app:layout_constraintBottom_toBottomOf="@id/information_4"
                    android:drawableEnd="@drawable/copy"
                    android:drawablePadding="@dimen/dimen5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/information_4">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/divider_3"
                    app:layout_constraintTop_toBottomOf="@id/information_4"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@color/divider_color">
                </View>
                <TextView
                    android:id="@+id/information_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:fontFamily="@font/hind_medium"
                    android:text="Güncel Borç:"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_3">
                </TextView>
                <TextView
                    android:id="@+id/currentDebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:fontFamily="@font/hind"
                    app:setTotalPrice="@{invoice.amount}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen18sp"
                    app:layout_constraintBottom_toBottomOf="@id/information_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/information_5">
                </TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen15"
                    app:layout_constraintTop_toBottomOf="@id/information_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Görüntüle"
                    android:id="@+id/button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen18sp"
                    android:background="@drawable/goruntule_btn_back"
                    android:textAllCaps="false"
                    android:paddingVertical="@dimen/dimen20">
                </androidx.appcompat.widget.AppCompatButton>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
